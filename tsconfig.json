
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "module": "node16",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["nativewind", "expo-router"]
  },
  "include": [
    "app",
    "components",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
